
<div class="panel" >

		<%= gravatar_for current_user, :size => 30 %>

		<span class="user"><%= link_to @user.name, @user %></span>
		<% user = micropost.user rescue User.find(micropost.user_id) %>
		
		<% if current_user?(user) %>		
		<span class="delete">
			<%= link_to "x", micropost, :method => :delete,
														  :confirm => "Are you sure?", 	
														  :title => micropost.content, :class => "button secondary" %></span>
		<% end %><br />		
		<span class="content"><%= micropost.content %></span> <br />
		<span class="timestamp">
			<%= time_ago_in_words(micropost.created_at) %> ago
		</span>

</div>