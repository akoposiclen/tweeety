<div class="panel">
		
		<%= gravatar_for (feed_item.user), :size => 30 %>

		<span class="user"><%= link_to feed_item.user.name, feed_item.user %></span> 
		<% if current_user?(feed_item.user) %>
		<span class="delete">
			<%= link_to "x", feed_item, :method => :delete,
														  :confirm => "Are you sure?", 	
														  :title => feed_item.content, :class => "button secondary"%></span>
		<% end %><br />
		<span class="content"><%= feed_item.content %></span> <br />
		<span class="timestamp">
			<%= time_ago_in_words(feed_item.created_at) %> ago
		</span>

</div>

